{{!-- satus validation --}}
  <main>
  <h1>Registeren</h1>
  {{# if success }}
    <section class="success">
        <h2>Registreren gelukt!</h2>
        <a href="/login">Ga hier naar het Log-in</a>
    </section>
{{ else }}
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form class="registreren" action="/submit" method="post">
    <img class="iconbucket" src="/images/iconbuckettest.png">
        <div class="input">
            <label for="email">E-Mail</label><br>
            <input class="formcenter" type="email" id="email" name="email" >
        </div>
              <div class="input">
            <label for="name">Name</label><br>
            <input  class="formcenter" type="text" id="name" name="name">
        </div>
        <div class="input">
            <label for="password">Password</label><br>
            <input class="formcenter"  type="password" id="password" name="password">
        </div>
        <div class="input">
            <label for="confirmPassword">Confirm Password</label><br>
            <input class="formcenter"  type="password" id="confirmPassword" name="confirmPassword">
        </div>
          <div class="input">
            <label for="iwant">Wat wil je nog eens gedaan hebben in je leven</label><br>
            <input class="formcenter"  type="text" id="iwant" name="iwant">
        </div>
        <button class="registersubmit"type="submit">Registreer</button>
    </form>
{{/if}}
</main>
 {{!-- end status validatoin --}}

